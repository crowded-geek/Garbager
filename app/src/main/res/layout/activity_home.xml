<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garbager"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/wallet_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_wallet"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/options_holder"
        android:layout_below="@id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:horizontalSpacing="10dp"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp"
        android:layout_centerInParent="true"
        android:columnCount="2"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_bin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="26dp"
            android:padding="16dp"
            android:layout_margin="18dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_bin"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Bin"
                    android:textColor="@color/white"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="26dp"
            android:id="@+id/btn_donate"
            android:layout_margin="18dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_coin"
                android:scaleType="fitCenter"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Donate"
                    android:textColor="@color/white"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_leader"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="26dp"
            android:padding="16dp"
            android:layout_margin="18dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_leader"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Leaderboard"
                    android:textColor="@color/white"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_report"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="26dp"
            android:padding="16dp"
            android:layout_margin="18dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_report"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:background="@color/grey">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="Report"
                    android:textColor="@color/white"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>